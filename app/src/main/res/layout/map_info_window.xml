<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/custom_info_window"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/info_window_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/dummy_info_window_title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/info_window_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/dummy_info_window_address"
        android:layout_below="@id/info_window_title"/>
</RelativeLayout>